{
  "openapi": "3.1.1",
  "info": {
    "title": "spall",
    "description": "Local semantic note store with embeddings",
    "version": "0.0.1"
  },
  "paths": {
    "/project/{id}/list": {
      "get": {
        "operationId": "note.list",
        "summary": "List notes",
        "description": "List all note paths in a project.",
        "responses": {
          "200": {
            "description": "List of notes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "number"
                      },
                      "path": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "id",
                      "path"
                    ]
                  }
                }
              }
            }
          },
          "404": {
            "description": "Project not found"
          }
        },
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "in": "path",
            "name": "id",
            "required": true
          }
        ]
      }
    },
    "/project/{id}/note/{path}": {
      "get": {
        "operationId": "note.get",
        "summary": "Get a note",
        "description": "Get a note by path within a project.",
        "responses": {
          "200": {
            "description": "Note with content",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "number"
                    },
                    "project": {
                      "type": "number"
                    },
                    "path": {
                      "type": "string"
                    },
                    "content": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "id",
                    "project",
                    "path",
                    "content"
                  ]
                }
              }
            }
          },
          "404": {
            "description": "Project or note not found"
          }
        },
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "in": "path",
            "name": "id",
            "required": true
          },
          {
            "schema": {
              "type": "string"
            },
            "in": "path",
            "name": "path",
            "required": true
          }
        ]
      }
    },
    "/project": {
      "post": {
        "operationId": "project.create",
        "summary": "Create a project",
        "description": "Create a project",
        "responses": {
          "200": {
            "description": "Event stream",
            "content": {
              "text/event-stream": {
                "schema": {
                  "oneOf": [
                    {
                      "type": "object",
                      "properties": {
                        "tag": {
                          "type": "string",
                          "const": "project.created"
                        },
                        "info": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "number"
                            },
                            "name": {
                              "type": "string"
                            },
                            "dir": {
                              "type": "string"
                            },
                            "noteCount": {
                              "type": "number"
                            }
                          },
                          "required": [
                            "id",
                            "name",
                            "dir",
                            "noteCount"
                          ]
                        }
                      },
                      "required": [
                        "tag",
                        "info"
                      ]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "tag": {
                          "type": "string",
                          "const": "project.updated"
                        },
                        "foo": {
                          "type": "number"
                        }
                      },
                      "required": [
                        "tag",
                        "foo"
                      ]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "tag": {
                          "type": "string",
                          "const": "model.download"
                        },
                        "info": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "number"
                            },
                            "name": {
                              "type": "string"
                            },
                            "path": {
                              "type": "string"
                            }
                          },
                          "required": [
                            "id",
                            "name",
                            "path"
                          ]
                        }
                      },
                      "required": [
                        "tag",
                        "info"
                      ]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "tag": {
                          "type": "string",
                          "const": "model.progress"
                        },
                        "info": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "number"
                            },
                            "name": {
                              "type": "string"
                            },
                            "path": {
                              "type": "string"
                            }
                          },
                          "required": [
                            "id",
                            "name",
                            "path"
                          ]
                        },
                        "downloaded": {
                          "type": "number"
                        },
                        "total": {
                          "type": "number"
                        }
                      },
                      "required": [
                        "tag",
                        "info",
                        "downloaded",
                        "total"
                      ]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "tag": {
                          "type": "string",
                          "const": "model.downloaded"
                        },
                        "info": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "number"
                            },
                            "name": {
                              "type": "string"
                            },
                            "path": {
                              "type": "string"
                            }
                          },
                          "required": [
                            "id",
                            "name",
                            "path"
                          ]
                        }
                      },
                      "required": [
                        "tag",
                        "info"
                      ]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "tag": {
                          "type": "string",
                          "const": "model.load"
                        },
                        "info": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "number"
                            },
                            "name": {
                              "type": "string"
                            },
                            "path": {
                              "type": "string"
                            }
                          },
                          "required": [
                            "id",
                            "name",
                            "path"
                          ]
                        }
                      },
                      "required": [
                        "tag",
                        "info"
                      ]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "tag": {
                          "type": "string",
                          "const": "store.create"
                        },
                        "path": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "tag",
                        "path"
                      ]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "tag": {
                          "type": "string",
                          "const": "store.created"
                        },
                        "path": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "tag",
                        "path"
                      ]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "tag": {
                          "type": "string",
                          "const": "scan.start"
                        },
                        "numFiles": {
                          "type": "number"
                        }
                      },
                      "required": [
                        "tag",
                        "numFiles"
                      ]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "tag": {
                          "type": "string",
                          "const": "scan.progress"
                        },
                        "path": {
                          "type": "string"
                        },
                        "status": {
                          "type": "string",
                          "enum": [
                            "added",
                            "modified",
                            "removed",
                            "ok"
                          ]
                        }
                      },
                      "required": [
                        "tag",
                        "path",
                        "status"
                      ]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "tag": {
                          "type": "string",
                          "const": "scan.done"
                        },
                        "numFiles": {
                          "type": "number"
                        }
                      },
                      "required": [
                        "tag",
                        "numFiles"
                      ]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "tag": {
                          "type": "string",
                          "const": "embed.start"
                        },
                        "numFiles": {
                          "type": "number"
                        },
                        "numChunks": {
                          "type": "number"
                        },
                        "numBytes": {
                          "type": "number"
                        }
                      },
                      "required": [
                        "tag",
                        "numFiles",
                        "numChunks",
                        "numBytes"
                      ]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "tag": {
                          "type": "string",
                          "const": "embed.progress"
                        },
                        "numFiles": {
                          "type": "number"
                        },
                        "numChunks": {
                          "type": "number"
                        },
                        "numBytes": {
                          "type": "number"
                        },
                        "numFilesProcessed": {
                          "type": "number"
                        },
                        "numBytesProcessed": {
                          "type": "number"
                        }
                      },
                      "required": [
                        "tag",
                        "numFiles",
                        "numChunks",
                        "numBytes",
                        "numFilesProcessed",
                        "numBytesProcessed"
                      ]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "tag": {
                          "type": "string",
                          "const": "embed.done"
                        },
                        "numFiles": {
                          "type": "number"
                        }
                      },
                      "required": [
                        "tag",
                        "numFiles"
                      ]
                    }
                  ]
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "dir": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  }
                },
                "required": [
                  "dir"
                ]
              }
            }
          }
        }
      },
      "get": {
        "operationId": "project.get",
        "summary": "Get project",
        "description": "Look up a project by name or id. Returns default project if neither specified.",
        "responses": {
          "200": {
            "description": "Project info",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "number"
                    },
                    "name": {
                      "type": "string"
                    },
                    "dir": {
                      "type": "string"
                    },
                    "noteCount": {
                      "type": "number"
                    }
                  },
                  "required": [
                    "id",
                    "name",
                    "dir",
                    "noteCount"
                  ]
                }
              }
            }
          }
        },
        "parameters": [
          {
            "in": "query",
            "name": "name",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "id",
            "schema": {
              "type": "number"
            }
          }
        ]
      }
    },
    "/project/list": {
      "get": {
        "operationId": "project.list",
        "summary": "List projects",
        "description": "List all projects.",
        "responses": {
          "200": {
            "description": "List of projects",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "number"
                      },
                      "name": {
                        "type": "string"
                      },
                      "dir": {
                        "type": "string"
                      },
                      "noteCount": {
                        "type": "number"
                      }
                    },
                    "required": [
                      "id",
                      "name",
                      "dir",
                      "noteCount"
                    ]
                  }
                }
              }
            }
          }
        }
      }
    },
    "/project/note": {
      "post": {
        "operationId": "note.add",
        "summary": "Add a note",
        "description": "Add a note to a project and embed it. Requires project ID.",
        "responses": {
          "200": {
            "description": "Note info",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "number"
                    },
                    "project": {
                      "type": "number"
                    },
                    "path": {
                      "type": "string"
                    },
                    "content": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "id",
                    "project",
                    "path",
                    "content"
                  ]
                }
              }
            }
          },
          "404": {
            "description": "Project not found"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project": {
                    "type": "number"
                  },
                  "path": {
                    "type": "string"
                  },
                  "content": {
                    "type": "string"
                  }
                },
                "required": [
                  "project",
                  "path",
                  "content"
                ]
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "operationId": "health",
        "summary": "Health check",
        "description": "Check if the server is running",
        "responses": {
          "200": {
            "description": "Server is healthy",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {}
}