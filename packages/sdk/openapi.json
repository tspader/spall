{
  "openapi": "3.1.1",
  "info": {
    "title": "spall",
    "description": "Local semantic note store with embeddings",
    "version": "0.0.1"
  },
  "paths": {
    "/project": {
      "post": {
        "operationId": "project.create",
        "summary": "Create a project",
        "description": "Create a project",
        "responses": {
          "200": {
            "description": "Event stream",
            "content": {
              "text/event-stream": {
                "schema": {
                  "oneOf": [
                    {
                      "type": "object",
                      "properties": {
                        "tag": {
                          "type": "string",
                          "const": "project.created"
                        },
                        "info": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "number"
                            },
                            "name": {
                              "type": "string"
                            },
                            "dir": {
                              "type": "string"
                            }
                          },
                          "required": [
                            "id",
                            "name",
                            "dir"
                          ]
                        }
                      },
                      "required": [
                        "tag",
                        "info"
                      ]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "tag": {
                          "type": "string",
                          "const": "project.updated"
                        },
                        "foo": {
                          "type": "number"
                        }
                      },
                      "required": [
                        "tag",
                        "foo"
                      ]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "tag": {
                          "type": "string",
                          "const": "model.download"
                        },
                        "info": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "number"
                            },
                            "name": {
                              "type": "string"
                            },
                            "path": {
                              "type": "string"
                            }
                          },
                          "required": [
                            "id",
                            "name",
                            "path"
                          ]
                        }
                      },
                      "required": [
                        "tag",
                        "info"
                      ]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "tag": {
                          "type": "string",
                          "const": "model.progress"
                        },
                        "info": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "number"
                            },
                            "name": {
                              "type": "string"
                            },
                            "path": {
                              "type": "string"
                            }
                          },
                          "required": [
                            "id",
                            "name",
                            "path"
                          ]
                        },
                        "downloaded": {
                          "type": "number"
                        },
                        "total": {
                          "type": "number"
                        }
                      },
                      "required": [
                        "tag",
                        "info",
                        "downloaded",
                        "total"
                      ]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "tag": {
                          "type": "string",
                          "const": "model.downloaded"
                        },
                        "info": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "number"
                            },
                            "name": {
                              "type": "string"
                            },
                            "path": {
                              "type": "string"
                            }
                          },
                          "required": [
                            "id",
                            "name",
                            "path"
                          ]
                        }
                      },
                      "required": [
                        "tag",
                        "info"
                      ]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "tag": {
                          "type": "string",
                          "const": "model.load"
                        },
                        "info": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "number"
                            },
                            "name": {
                              "type": "string"
                            },
                            "path": {
                              "type": "string"
                            }
                          },
                          "required": [
                            "id",
                            "name",
                            "path"
                          ]
                        }
                      },
                      "required": [
                        "tag",
                        "info"
                      ]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "tag": {
                          "type": "string",
                          "const": "store.create"
                        },
                        "path": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "tag",
                        "path"
                      ]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "tag": {
                          "type": "string",
                          "const": "store.created"
                        },
                        "path": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "tag",
                        "path"
                      ]
                    }
                  ]
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "dir": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  }
                },
                "required": [
                  "dir"
                ]
              }
            }
          }
        }
      },
      "get": {
        "operationId": "project.get",
        "summary": "Get project",
        "description": "Look up a project by name or id. Returns default project if neither specified.",
        "responses": {
          "200": {
            "description": "Project info",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "number"
                    },
                    "name": {
                      "type": "string"
                    },
                    "dir": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "id",
                    "name",
                    "dir"
                  ]
                }
              }
            }
          }
        },
        "parameters": [
          {
            "in": "query",
            "name": "name",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "id",
            "schema": {
              "type": "number"
            }
          }
        ]
      }
    },
    "/project/note": {
      "post": {
        "operationId": "note.add",
        "summary": "Add a note",
        "description": "Add a note to a project and embed it. Requires project ID.",
        "responses": {
          "200": {
            "description": "Note info",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "number"
                    },
                    "project": {
                      "type": "number"
                    },
                    "path": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "id",
                    "project",
                    "path"
                  ]
                }
              }
            }
          },
          "404": {
            "description": "Project not found"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project": {
                    "type": "number"
                  },
                  "path": {
                    "type": "string"
                  },
                  "content": {
                    "type": "string"
                  }
                },
                "required": [
                  "project",
                  "path",
                  "content"
                ]
              }
            }
          }
        }
      }
    },
    "/init": {
      "post": {
        "operationId": "init",
        "summary": "Initialize project",
        "description": "Initialize a spall project in a directory, creating the database and downloading models. Emits progress events via SSE.",
        "responses": {
          "200": {
            "description": "Initialization events stream",
            "content": {
              "text/event-stream": {
                "schema": {
                  "oneOf": [
                    {
                      "type": "object",
                      "properties": {
                        "tag": {
                          "type": "string",
                          "const": "project.created"
                        },
                        "info": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "number"
                            },
                            "name": {
                              "type": "string"
                            },
                            "dir": {
                              "type": "string"
                            }
                          },
                          "required": [
                            "id",
                            "name",
                            "dir"
                          ]
                        }
                      },
                      "required": [
                        "tag",
                        "info"
                      ]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "tag": {
                          "type": "string",
                          "const": "project.updated"
                        },
                        "foo": {
                          "type": "number"
                        }
                      },
                      "required": [
                        "tag",
                        "foo"
                      ]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "tag": {
                          "type": "string",
                          "const": "model.download"
                        },
                        "info": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "number"
                            },
                            "name": {
                              "type": "string"
                            },
                            "path": {
                              "type": "string"
                            }
                          },
                          "required": [
                            "id",
                            "name",
                            "path"
                          ]
                        }
                      },
                      "required": [
                        "tag",
                        "info"
                      ]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "tag": {
                          "type": "string",
                          "const": "model.progress"
                        },
                        "info": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "number"
                            },
                            "name": {
                              "type": "string"
                            },
                            "path": {
                              "type": "string"
                            }
                          },
                          "required": [
                            "id",
                            "name",
                            "path"
                          ]
                        },
                        "downloaded": {
                          "type": "number"
                        },
                        "total": {
                          "type": "number"
                        }
                      },
                      "required": [
                        "tag",
                        "info",
                        "downloaded",
                        "total"
                      ]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "tag": {
                          "type": "string",
                          "const": "model.downloaded"
                        },
                        "info": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "number"
                            },
                            "name": {
                              "type": "string"
                            },
                            "path": {
                              "type": "string"
                            }
                          },
                          "required": [
                            "id",
                            "name",
                            "path"
                          ]
                        }
                      },
                      "required": [
                        "tag",
                        "info"
                      ]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "tag": {
                          "type": "string",
                          "const": "model.load"
                        },
                        "info": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "number"
                            },
                            "name": {
                              "type": "string"
                            },
                            "path": {
                              "type": "string"
                            }
                          },
                          "required": [
                            "id",
                            "name",
                            "path"
                          ]
                        }
                      },
                      "required": [
                        "tag",
                        "info"
                      ]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "tag": {
                          "type": "string",
                          "const": "store.create"
                        },
                        "path": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "tag",
                        "path"
                      ]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "tag": {
                          "type": "string",
                          "const": "store.created"
                        },
                        "path": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "tag",
                        "path"
                      ]
                    }
                  ]
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "directory": {
                    "type": "string",
                    "description": "Project root directory"
                  }
                },
                "required": [
                  "directory"
                ]
              }
            }
          }
        }
      }
    },
    "/index": {
      "post": {
        "operationId": "index",
        "summary": "Index files",
        "description": "Index files in a project directory, emitting progress events via SSE",
        "responses": {
          "200": {
            "description": "Indexing events stream",
            "content": {
              "text/event-stream": {
                "schema": {
                  "anyOf": [
                    {
                      "oneOf": [
                        {
                          "type": "object",
                          "properties": {
                            "tag": {
                              "type": "string",
                              "const": "scan"
                            },
                            "action": {
                              "type": "string",
                              "const": "start"
                            },
                            "total": {
                              "type": "number"
                            }
                          },
                          "required": [
                            "tag",
                            "action",
                            "total"
                          ]
                        },
                        {
                          "type": "object",
                          "properties": {
                            "tag": {
                              "type": "string",
                              "const": "scan"
                            },
                            "action": {
                              "type": "string",
                              "const": "progress"
                            },
                            "path": {
                              "type": "string"
                            },
                            "status": {
                              "type": "string",
                              "enum": [
                                "added",
                                "modified",
                                "removed",
                                "ok"
                              ]
                            }
                          },
                          "required": [
                            "tag",
                            "action",
                            "path",
                            "status"
                          ]
                        },
                        {
                          "type": "object",
                          "properties": {
                            "tag": {
                              "type": "string",
                              "const": "scan"
                            },
                            "action": {
                              "type": "string",
                              "const": "done"
                            }
                          },
                          "required": [
                            "tag",
                            "action"
                          ]
                        }
                      ]
                    },
                    {
                      "oneOf": [
                        {
                          "type": "object",
                          "properties": {
                            "tag": {
                              "type": "string",
                              "const": "embed"
                            },
                            "action": {
                              "type": "string",
                              "const": "start"
                            },
                            "totalDocs": {
                              "type": "number"
                            },
                            "totalChunks": {
                              "type": "number"
                            },
                            "totalBytes": {
                              "type": "number"
                            }
                          },
                          "required": [
                            "tag",
                            "action",
                            "totalDocs",
                            "totalChunks",
                            "totalBytes"
                          ]
                        },
                        {
                          "type": "object",
                          "properties": {
                            "tag": {
                              "type": "string",
                              "const": "embed"
                            },
                            "action": {
                              "type": "string",
                              "const": "progress"
                            },
                            "filesProcessed": {
                              "type": "number"
                            },
                            "totalFiles": {
                              "type": "number"
                            },
                            "bytesProcessed": {
                              "type": "number"
                            },
                            "totalBytes": {
                              "type": "number"
                            }
                          },
                          "required": [
                            "tag",
                            "action",
                            "filesProcessed",
                            "totalFiles",
                            "bytesProcessed",
                            "totalBytes"
                          ]
                        },
                        {
                          "type": "object",
                          "properties": {
                            "tag": {
                              "type": "string",
                              "const": "embed"
                            },
                            "action": {
                              "type": "string",
                              "const": "done"
                            }
                          },
                          "required": [
                            "tag",
                            "action"
                          ]
                        }
                      ]
                    }
                  ]
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "directory": {
                    "type": "string",
                    "description": "Project root directory"
                  }
                },
                "required": [
                  "directory"
                ]
              }
            }
          }
        }
      }
    },
    "/search": {
      "post": {
        "operationId": "search",
        "summary": "Search",
        "description": "Search for similar content using embeddings",
        "responses": {
          "200": {
            "description": "Search results",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/SearchResult"
                  }
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "directory": {
                    "type": "string",
                    "description": "Project root directory"
                  },
                  "query": {
                    "type": "string",
                    "description": "Search query text"
                  },
                  "limit": {
                    "description": "Maximum number of results",
                    "type": "number"
                  }
                },
                "required": [
                  "directory",
                  "query"
                ]
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "operationId": "health",
        "summary": "Health check",
        "description": "Check if the server is running",
        "responses": {
          "200": {
            "description": "Server is healthy",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SearchResult": {
        "type": "object",
        "properties": {
          "key": {
            "type": "string",
            "description": "Unique identifier for the result"
          },
          "distance": {
            "type": "number",
            "description": "Distance/similarity score"
          }
        },
        "required": [
          "key",
          "distance"
        ]
      }
    }
  }
}