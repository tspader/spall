{
  "name": "spall",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "catalog": {
      "@tsconfig/bun": "1.0.10",
      "@types/bun": "1.2.21",
      "typescript": "5.9.3",
      "prettier": "3.8.0"
    }
  },
  "scripts": {
    "typecheck": "bun --filter '*' typecheck",
    "test": "bun test packages/core && cd packages/tui && bun test",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "tui": "bun run packages/tui/src/App.tsx"
  },
  "devDependencies": {
    "@tsconfig/bun": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "yargs": "^18.0.0"
  }
}
